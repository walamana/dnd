---
import MainLayout from "../layouts/MainLayout.astro"
import CharacterCard from "../components/CharacterCard.vue"
import {ref} from "vue";


const users = ["Jonas", "Nico", "Jonas", "Nico", "Jonas", "Nico", "Jonas", "Nico", "Jonas", "Nico"]

---
<MainLayout title="Login">

    <div class="wrapper">
        <div class="container">
            <h1>WÃ¤hle deinen Character</h1>
            <div class="players">
                {users.map(user => (
                        <CharacterCard name={user} client:load/>
                ))}
            </div>
            <div class="shadow"/>
        </div>
    </div>

</MainLayout>

<style lang="less">
    .wrapper {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: fixed;
        top: 0;
        left: 0;
        width: calc(100% - 40px);
        height: calc(100% - 40px);
        z-index: 1000;
        background: var(--surface-color);


      @media (max-width: 600px ){
        overflow-y: hidden;
        padding: 20px;
      }
    }
    .container {
      width: 100%;
        max-width: 600px;
        overflow-y: auto;
        margin: 100px;
        position: relative;

        @media (max-width: 600px ){
          margin: 0;
          height: 100%;
        }

    }
    .shadow{
        position: sticky;
        bottom: 0;
        width: 100%;
        height: 30px;
        z-index: 10;
        background: linear-gradient(0deg, #090910FF 0%, #09091000 100%);

    }
    h1 {
        font-size: 30px !important;
        position: sticky;
        top: 0;
        background: var(--surface-color);
        z-index: 100;
    }
    .players{
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
    }
    .players div {
        margin: 20px;
    }
</style>